{
  "$schema": "https://opencode.ai/config.json",
    "instructions": ["AGENTS.md", "docs/DEV_WORKFLOW.md"],
  "mcp": {
    "task-master-ai": {
      "type": "local",
      "command": ["npx", "-y", "--package=task-master-ai", "task-master-ai"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "repomix": {
      "type": "local",
      "command": ["repomix", "--mcp"]
    },
    "basic-memory": {
      "type": "local",
      "command": ["uvx", "basic-memory", "--project", "favoritable", "mcp"]
    },
    "shadcn-ui": {
      "type": "local",
      "command": ["npx", "@jpisnice/shadcn-ui-mcp-server"]
    }
  }
}
