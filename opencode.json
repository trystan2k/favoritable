{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md", "docs/DEV_WORKFLOW.md"],
  "mcp": {
    "task-master-ai": {
      "type": "local",
      "command": ["npx", "-y", "--package=task-master-ai", "task-master-ai"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "repomix": {
      "type": "local",
      "command": ["repomix", "--mcp"]
    },
    "basic-memory": {
      "type": "local",
      "command": ["uvx", "basic-memory", "--project", "favoritable", "mcp"]
    },
    "shadcn-ui": {
      "type": "local",
      "command": ["npx", "@jpisnice/shadcn-ui-mcp-server"]
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--browser=chrome",
        "--isolated",
        "--output-dir=./playwright"
      ]
    }
  }
}
