{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md", "docs/DEV_WORKFLOW.md"],
  "provider": {
    "github-copilot": {
      "models": {
        "claude-sonnet-4.5": {
          "limit": {
            "context": 256000,
            "output": 32000
          }
        }
      }
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "task-master-ai": {
      "type": "local",
      "command": ["npx", "-y", "--package=task-master-ai", "task-master-ai"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "repomix": {
      "enabled": false,
      "type": "local",
      "command": ["repomix", "--mcp"]
    },
    "basic-memory": {
      "type": "local",
      "command": ["uvx", "basic-memory", "--project", "favoritable", "mcp"]
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--browser=chrome",
        "--isolated",
        "--output-dir=./playwright"
      ]
    },
    "serena": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--project",
        "favoritable"
      ]
    },
    "sqlite": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "mcp-sqlite", "apps/api/local.db"]
    }
  }
}
