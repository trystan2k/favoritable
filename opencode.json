{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md", "docs/DEV_WORKFLOW.md"],
  "provider": {
    "github-copilot": {
      "models": {
        "claude-sonnet-4.5": {
          "limit": {
            "context": 256000,
            "output": 32000
          }
        }
      }
    }
  },
  "mcp": {
    "task-master-ai": {
      "type": "local",
      "command": ["npx", "-y", "--package=task-master-ai", "task-master-ai"],
      "enabled": false
    },
    "basic-memory": {
      "type": "local",
      "command": ["uvx", "basic-memory", "--project", "favoritable", "mcp"],
      "enabled": false
    },
    "serena": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "false",
        "--project",
        "favoritable"
      ]
    },
    "sqlite": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "mcp-sqlite", "apps/api/local.db"]
    }
  }
}
