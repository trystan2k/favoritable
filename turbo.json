{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "**/biome.json"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "inputs": ["$TURBO_DEFAULT$", "**/biome.json"]
    },
    "format": {
      "dependsOn": ["^format"],
      "inputs": ["$TURBO_DEFAULT$", "**/biome.json"]
    },
    "format:fix": {
      "dependsOn": ["^format:fix"],
      "inputs": ["$TURBO_DEFAULT$", "**/biome.json"]
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": ["$TURBO_DEFAULT$", "**/biome.json"]
    },
    "check:fix": {
      "dependsOn": ["^check:fix"],
      "inputs": ["$TURBO_DEFAULT$", "**/biome.json"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["$TURBO_DEFAULT$", "**/tsconfig.json"]
    },
    "knip": {
      "dependsOn": ["^knip"],
      "inputs": ["$TURBO_DEFAULT$", "**/knip.json"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$", "**/vitest.config.ts"]
    },
    "test:watch": {
      "dependsOn": ["^test:watch"],
      "inputs": ["$TURBO_DEFAULT$", "**/vitest.config.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": ["$TURBO_DEFAULT$", "**/vitest.config.ts"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
