{
  "name": "favoritable",
  "description": "API to handle favorites links",
  "version": "0.0.1",
  "author": "Thiago Mendonca",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/trystan2k/favoritable#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trystan2k/favoritable"
  },
  "bugs": {
    "url": "https://github.com/trystan2k/favoritable/issues"
  },
  "keywords": [
    "bookmarks",
    "favoritable"
  ],
  "license": "MIT",
  "scripts": {
    "complete-check": "pnpm typecheck && pnpm lint:fix && pnpm format:fix && pnpm check:fix && pnpm knip && pnpm test:coverage && pnpm build",
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:fix:unsafe": "turbo run lint:fix:unsafe",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "check": "turbo run check",
    "check:fix": "turbo run check:fix",
    "knip": "turbo run knip",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage"
  },
  "devDependencies": {
    "@favoritable/config-biome": "workspace:*",
    "turbo": "~2.4.4"
  },
  "peerDependencies": {
    "@biomejs/biome": "~2.1.4"
  },
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.8.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "core-js",
      "esbuild",
      "oxc-resolver",
      "puppeteer",
      "sqlite3"
    ]
  }
}
