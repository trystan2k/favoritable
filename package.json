{
  "name": "favoritable",
  "description": "API to handle favorites links",
  "version": "0.0.1",
  "author": "Thiago Mendonca",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/trystan2k/favoritable#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trystan2k/favoritable"
  },
  "bugs": {
    "url": "https://github.com/trystan2k/favoritable/issues"
  },
  "keywords": [
    "bookmarks",
    "favoritable"
  ],
  "license": "MIT",
  "scripts": {
    "complete-check": "npm run typecheck && npm run lint && npm run build",
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "turbo": "~2.4.4"
  },
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.8.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "puppeteer",
      "sqlite3"
    ]
  }
}
