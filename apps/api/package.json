{
  "name": "@favoritable/api",
  "description": "API to handle favorites links",
  "version": "0.0.1",
  "author": "Thiago Mendonca",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/trystan2k/favoritable#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trystan2k/favoritable"
  },
  "bugs": {
    "url": "https://github.com/trystan2k/favoritable/issues"
  },
  "keywords": [
    "hono",
    "bookmarks",
    "favoritable",
    "API",
    "node"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint --error-on-warnings",
    "lint:fix": "pnpm lint --write",
    "format": "biome format",
    "format:fix": "pnpm format --write",
    "check": "biome check",
    "check:fix": "pnpm check --write",
    "knip": "knip",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:health": "tsx src/db/utils/db-health-check.ts",
    "docker:build": "docker build -f Dockerfile -t favoritable-api ../../",
    "docker:run": "docker run -d --name favoritable-api -p 3000:3000 -e NODE_ENV=production -e DATABASE_TYPE=local -e LOCAL_DATABASE_URL=file:/app/data/local.db -v $(pwd)/data:/app/data favoritable-api:latest",
    "docker:stop": "docker stop favoritable-api && docker rm favoritable-api",
    "docker:logs": "docker logs favoritable-api"
  },
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "~1.38.4",
    "@hono/node-server": "~1.13.8",
    "@hono/zod-validator": "~0.4.3",
    "@libsql/client": "~0.14.0",
    "better-auth": "~1.3.7",
    "cheerio": "~1.0.0",
    "domhandler": "~5.0.3",
    "drizzle-orm": "~0.40.0",
    "hono": "~4.7.2",
    "pino": "~9.7.0",
    "puppeteer": "~24.16.1",
    "reflect-metadata": "~0.2.2",
    "zod": "~3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "~2.1.4",
    "@favoritable/lint-config": "workspace:*",
    "@favoritable/test-config": "workspace:*",
    "@favoritable/typescript-config": "workspace:*",
    "@types/node": "~22.13.8",
    "@vitest/coverage-v8": "~3.2.4",
    "drizzle-kit": "~0.30.5",
    "knip": "~5.62.0",
    "pino-pretty": "~13.0.0",
    "tsx": "~4.19.3",
    "typescript": "~5.7.3",
    "vitest": "~3.2.4"
  }
}
