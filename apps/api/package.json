  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "~1.13.8",
    "better-sqlite3": "~11.8.1",
    "hono": "~4.7.2",
    "sqlite": "~5.1.1",
    "sqlite3": "~5.1.7"
  },
  "devDependencies": {
    "@favoritable/typescript-config": "workspace:*",
    "@types/better-sqlite3": "~7.6.12",
    "@types/node": "~22.13.4",
    "tsx": "~4.19.3",
    "typescript": "~5.7.3"
