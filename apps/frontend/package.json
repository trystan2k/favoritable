{
  "name": "@favoritable/frontend",
  "description": "Frontend application for the favoritable project",
  "version": "0.0.1",
  "author": "Thiago Mendonca",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/trystan2k/favoritable#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trystan2k/favoritable"
  },
  "bugs": {
    "url": "https://github.com/trystan2k/favoritable/issues"
  },
  "keywords": [
    "bookmarks",
    "favoritable",
    "frontend",
    "React",
    "TypeScript",
    "Rsbuild"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "rsbuild dev --open",
    "build": "rsbuild build",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint --error-on-warnings",
    "lint:fix": "pnpm lint --write",
    "format": "biome format",
    "format:fix": "pnpm format --write",
    "check": "biome check",
    "check:fix": "pnpm check --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "knip": "knip",
    "preview": "rsbuild preview"
  },
  "license": "MIT",
  "dependencies": {
    "@favoritable/themes": "workspace:*",
    "@tanstack/react-router": "~1.131.5",
    "better-auth": "1.3.26",
    "lucide-react": "~0.544.0",
    "react": "~19.1.0",
    "react-aria-components": "~1.10.1",
    "react-dom": "~19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "~2.1.4",
    "@favoritable/lint-config": "workspace:*",
    "@favoritable/test-config": "workspace:*",
    "@favoritable/typescript-config": "workspace:*",
    "@rsbuild/core": "~1.4.3",
    "@rsbuild/plugin-react": "~1.3.3",
    "@tanstack/react-router-devtools": "~1.131.5",
    "@tanstack/router-plugin": "~1.131.5",
    "@testing-library/jest-dom": "~6.6.4",
    "@testing-library/react": "~16.3.0",
    "@testing-library/user-event": "~14.6.1",
    "@types/react": "~19.1.8",
    "@types/react-dom": "~19.1.6",
    "@vitest/coverage-v8": "~3.2.4",
    "jsdom": "~26.1.0",
    "knip": "~5.62.0",
    "typescript": "~5.7.3",
    "vitest": "~3.2.4"
  }
}
